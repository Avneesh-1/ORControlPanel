<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ORControlPanelNew.ViewModels.Timer"
             x:Class="ORControlPanelNew.Views.Timer.AnesthesiaTimerPage"
             x:DataType="vm:AnesthesiaTimerViewModel">
    
    <Grid Margin="0" HorizontalAlignment="Stretch">
        <StackPanel>
            <!-- Timer Display Panel -->
            <Border CornerRadius="10"
                    Height="180"
                    Background="{DynamicResource AnesthesiaTimerBackgroundBrush}"
                    HorizontalAlignment="Stretch">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,8,0,0" Spacing="6">
                        <Image Source="avares://ORControlPanelNew/Assets/Icons/clock.png" Width="24" Height="26" VerticalAlignment="Center"/>
                        <TextBlock Text="ANESTHESIA TIMER"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 Foreground="#000000"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding ElapsedTime}"
                             FontSize="90"
                             FontFamily="avares://ORControlPanelNew/Assets/fonts/digital7.monoitalic.ttf#Digital-7 Mono Italic"
                             Foreground="#000000"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Padding="0,16,0,16"
                             Margin="0,24,0,0"/>
                </StackPanel>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Center" 
                      Spacing="10"
                      Margin="0,10,0,0">
                <Button Command="{Binding SetTimeCommand}" Classes="anesthesiaTimerButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="START" VerticalAlignment="Center"/>
                         <Image Source="avares://ORControlPanelNew/Assets/Icons/start.png" Width="16" Height="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding StopCommand}" Classes="anesthesiaTimerButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="PAUSE" VerticalAlignment="Center"/>
                        <Image Source="avares://ORControlPanelNew/Assets/Icons/pause.png" Width="16" Height="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding ResetCommand}" Classes="anesthesiaTimerButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="RESET" VerticalAlignment="Center"/>
                        <Image Source="avares://ORControlPanelNew/Assets/Icons/reset.png" Width="16" Height="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
            </StackPanel>
     
        </StackPanel>
    </Grid>

    <UserControl.Styles>
        <Style Selector="Button.anesthesiaTimerButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#404040"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style Selector="Button.anesthesiaTimerButton:pointerover">
            <Setter Property="Background" Value="#f0f0f0"/>
        </Style>
        <Style Selector="Button.anesthesiaTimerButton:pressed">
            <Setter Property="Background" Value="#e0e0e0"/>
        </Style>
    </UserControl.Styles>

    <UserControl.Resources>
        <LinearGradientBrush x:Key="AnesthesiaTimerBackgroundBrush" StartPoint="0%,0%" EndPoint="0%,100%">
            <GradientStop Offset="0" Color="#FFD700"/>
            <GradientStop Offset="1" Color="#FFA500"/>
        </LinearGradientBrush>
    </UserControl.Resources>
    
</UserControl> 