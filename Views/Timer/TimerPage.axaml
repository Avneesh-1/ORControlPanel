<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ORControlPanelNew.ViewModels.Timer"
             x:Class="ORControlPanelNew.Views.Timer.TimerPage"
             x:DataType="vm:TimerPageViewModel">
    
    <Grid Margin="20,10,0,0" HorizontalAlignment="Left" Width="300">
        <StackPanel>
            <!-- Timer Display Panel -->
            <Border CornerRadius="10"
                    Height="70"
                    Background="{DynamicResource TimerBackgroundBrush}">
                <TextBlock Text="{Binding ElapsedTime}"
                         FontSize="48"
                         FontFamily="Consolas"
                         Foreground="#00BFFF"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Center" 
                      Spacing="10"
                      Margin="0,10,0,0">
                <Button Content="START"
                        Command="{Binding StartCommand}"
                        Classes="timerButton"/>
                <Button Content="PAUSE"
                        Command="{Binding StopCommand}"
                        Classes="timerButton"/>
                <Button Content="RESET"
                        Command="{Binding ResetCommand}"
                        Classes="timerButton"/>
            </StackPanel>
        </StackPanel>
    </Grid>

    <UserControl.Styles>
        <Style Selector="Button.timerButton">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style Selector="Button.timerButton:pointerover">
            <Setter Property="Background" Value="#505050"/>
        </Style>
        <Style Selector="Button.timerButton:pressed">
            <Setter Property="Background" Value="#303030"/>
        </Style>
    </UserControl.Styles>

    <UserControl.Resources>
        <LinearGradientBrush x:Key="TimerBackgroundBrush" StartPoint="0%,0%" EndPoint="0%,100%">
            <GradientStop Offset="0" Color="#0080FF"/>
            <GradientStop Offset="1" Color="#0055AA"/>
        </LinearGradientBrush>
    </UserControl.Resources>
    
</UserControl>
