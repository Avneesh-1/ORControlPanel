<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ORControlPanelNew.ViewModels.Timer"
             x:Class="ORControlPanelNew.Views.Timer.TimerPage"
             x:DataType="vm:TimerPageViewModel">
    
    <Grid Margin="0" HorizontalAlignment="Stretch">
        <StackPanel>
            <!-- Timer Display Panel -->
            <Border CornerRadius="10"
                    Height="180"
                    HorizontalAlignment="Stretch">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#5DB7F3" Offset="0" />
                        <GradientStop Color="#3C8DCD" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="24,8,24,0" Spacing="12">
                        <Image Source="avares://ORControlPanelNew/Assets/Icons/time-clock.png" Width="24" Height="22" VerticalAlignment="Center"/>
                        <TextBlock Text="OPERATION TIMING"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 Foreground="#000000"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding ElapsedTime}"
                             FontSize="90"
                             FontFamily="avares://ORControlPanelNew/Assets/fonts/digital7.monoitalic.ttf#Digital-7 Mono Italic"
                             Foreground="#000000"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Padding="0,16,0,16"
                             Margin="0,24,0,0"/>
                </StackPanel>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Center" 
                      Spacing="10"
                      Margin="0,10,0,0">
                <Button Command="{Binding StartCommand}" Classes="timerButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="START" VerticalAlignment="Center"/>
                        <Image Source="avares://ORControlPanelNew/Assets/Icons/start.png" Width="16" Height="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding StopCommand}" Classes="timerButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="PAUSE" VerticalAlignment="Center"/>
                        <Image Source="avares://ORControlPanelNew/Assets/Icons/pause.png" Width="16" Height="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding ResetCommand}" Classes="timerButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="RESET" VerticalAlignment="Center"/>
                        <Image Source="avares://ORControlPanelNew/Assets/Icons/reset.png" Width="16" Height="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>

    <UserControl.Styles>
        <Style Selector="Button.timerButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#404040"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style Selector="Button.timerButton:pointerover">
            <Setter Property="Background" Value="#f0f0f0"/>
        </Style>
        <Style Selector="Button.timerButton:pressed">
            <Setter Property="Background" Value="#e0e0e0"/>
        </Style>
    </UserControl.Styles>

    <UserControl.Resources>
        <LinearGradientBrush x:Key="TimerBackgroundBrush" StartPoint="0%,0%" EndPoint="0%,100%">
            <GradientStop Offset="0" Color="#5DB7F3"/>
            <GradientStop Offset="1" Color="#3C8DCD"/>
        </LinearGradientBrush>
    </UserControl.Resources>
    
</UserControl>
