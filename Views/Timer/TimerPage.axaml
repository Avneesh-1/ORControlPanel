<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ORControlPanelNew.ViewModels.Timer"
             x:Class="ORControlPanelNew.Views.Timer.TimerPage"
             x:DataType="vm:TimerPageViewModel">
    
    <Grid Margin="0" HorizontalAlignment="Stretch">
        <StackPanel>
            <!-- Timer Display Panel -->
            <Border CornerRadius="10"
                    Height="180"
                    Background="{DynamicResource TimerBackgroundBrush}"
                    HorizontalAlignment="Stretch">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,8,0,0" Spacing="6">
                        <Image Source="avares://ORControlPanelNew/Assets/Icons/time-clock.png" Width="24" Height="24" VerticalAlignment="Center"/>
                        <TextBlock Text="OPERATION TIMING"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 Foreground="#000000"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding ElapsedTime}"
                             FontSize="64"
                             FontFamily="avares://ORControlPanelNew/Assets/fonts/digital7.monoitalic.ttf#Digital-7 Mono Italic"
                             Foreground="#000000"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Padding="0,16,0,16"
                             Margin="0,24,0,0"/>
                </StackPanel>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Center" 
                      Spacing="10"
                      Margin="0,10,0,0">
                <Button Command="{Binding StartCommand}" Classes="timerButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="START" VerticalAlignment="Center"/>
                        <Image Source="avares://ORControlPanelNew/Assets/Icons/start.png" Width="16" Height="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding StopCommand}" Classes="timerButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="PAUSE" VerticalAlignment="Center"/>
                        <Image Source="avares://ORControlPanelNew/Assets/Icons/pause.png" Width="16" Height="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding ResetCommand}" Classes="timerButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="RESET" VerticalAlignment="Center"/>
                        <Image Source="avares://ORControlPanelNew/Assets/Icons/reset.png" Width="16" Height="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>

    <UserControl.Styles>
        <Style Selector="Button.timerButton">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style Selector="Button.timerButton:pointerover">
            <Setter Property="Background" Value="#505050"/>
        </Style>
        <Style Selector="Button.timerButton:pressed">
            <Setter Property="Background" Value="#303030"/>
        </Style>
    </UserControl.Styles>

    <UserControl.Resources>
        <LinearGradientBrush x:Key="TimerBackgroundBrush" StartPoint="0%,0%" EndPoint="0%,100%">
            <GradientStop Offset="0" Color="#1E90FF"/>
            <GradientStop Offset="1" Color="#0000CD"/>
        </LinearGradientBrush>
    </UserControl.Resources>
    
</UserControl>
