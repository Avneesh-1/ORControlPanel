<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:ORControlPanelNew.Views.Timer"
        xmlns:clock="using:ORControlPanelNew.Views.Clock"
        xmlns:lighting="using:ORControlPanelNew.Views.Lighting"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="ORControlPanelNew.Views.MainWindow"
        Title="OR Control Panel"
        Background="Black"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar with Gradient Background -->
        <Border Grid.Row="0" 
                Background="#1a1a1a"
                BorderBrush="#333333"
                BorderThickness="0,0,0,1"
                Padding="20">
            <TextBlock Text="OPERATION ROOM CONTROL PANEL"
                     FontSize="42"
                     FontWeight="Bold"
                     FontFamily="Segoe UI"
                     Foreground="#00ff00"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect
                        BlurRadius="4"
                        Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <Grid Grid.Row="1">
            <Grid ColumnDefinitions="Auto,*,Auto,*,Auto">
                <!-- Left Timer (Blue) -->
                <views:TimerPage Grid.Column="0" Margin="20,10,0,0"/>
                
                <!-- Middle Timer (Anesthesia - Orange) -->
                <views:AnesthesiaTimerPage Grid.Column="2" Margin="0,10,0,0"/>
                
                <!-- Right Clock (Green) -->
                <clock:ClockPage Grid.Column="4" Margin="0,10,20,0"/>
            </Grid>
            <StackPanel Orientation="Horizontal">
                <lighting:GeneralLightingControl/>
                <lighting:LaminarLightControl/>
                <lighting:OTLightsControl/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>