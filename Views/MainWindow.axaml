<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:ORControlPanelNew.Views.Timer"
        xmlns:clock="using:ORControlPanelNew.Views.Clock"
        xmlns:lighting="using:ORControlPanelNew.Views.Lighting"
        xmlns:gas="using:ORControlPanelNew.Views.GasMonitoring"
        xmlns:vm="using:ORControlPanelNew.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="ORControlPanelNew.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="OR Control Panel"
        Background="Black"
        WindowState="Maximized">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar with Gradient Background -->
        <Border Grid.Row="0" 
                Background="#1a1a1a"
                BorderBrush="#333333"
                BorderThickness="0,0,0,1"
                Padding="10">
            <TextBlock Text="OPERATION ROOM CONTROL PANEL"
                     FontSize="24"
                     FontWeight="Bold"
                     FontFamily="Segoe UI"
                     Foreground="#00ff00"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect
                        BlurRadius="3"
                        Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Lighting Controls -->
            <StackPanel Grid.Column="0" 
                      Orientation="Vertical" 
                      Spacing="10"
                      VerticalAlignment="Top">
                <lighting:GeneralLightingControl/>
                <lighting:LaminarLightControl/>
                <lighting:OTLightsControl/>
            </StackPanel>

            <!-- Left Timer (Blue) -->
            <Grid Grid.Column="1">
                <views:TimerPage/>
            </Grid>

            <!-- Middle Timer (Anesthesia - Orange) -->
            <Grid Grid.Column="2">
                <views:AnesthesiaTimerPage/>
            </Grid>

            <!-- Right Section (Clock and Gas Monitoring) -->
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Clock -->
                <clock:ClockPage Grid.Row="0"/>

                <!-- Spacer for Set Time button area -->
                <Border Grid.Row="1" Height="150"/>

                <!-- Gas Monitoring -->
                <gas:GasMonitoringView Grid.Row="2" 
                                      DataContext="{Binding GasMonitoring}"
                                      MaxWidth="400"
                                      Margin="0,20,0,0"
                                      VerticalAlignment="Top"/>
            </Grid>
        </Grid>
    </Grid>
</Window>