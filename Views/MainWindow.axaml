<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:ORControlPanelNew.Views.Timer"
        xmlns:clock="using:ORControlPanelNew.Views.Clock"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="600"
        x:Class="ORControlPanelNew.Views.MainWindow"
        Title=""
        Background="Black"
        WindowState="Maximized">
    
    <Grid>
        <!-- Timer Section -->
        <Grid ColumnDefinitions="Auto,*,Auto,*,Auto">
            <!-- Left Timer (Blue) -->
            <views:TimerPage Grid.Column="0" Margin="20,10,0,0"/>
            
            <!-- Middle Timer (Anesthesia - Orange) -->
            <views:AnesthesiaTimerPage Grid.Column="2" Margin="0,10,0,0"/>
            
            <!-- Right Clock (Green) -->
            <clock:ClockPage Grid.Column="4" Margin="0,10,20,0"/>
        </Grid>
    </Grid>
</Window>