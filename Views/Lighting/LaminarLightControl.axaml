<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ORControlPanelNew.ViewModels.Lighting"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="100"
             x:Class="ORControlPanelNew.Views.Lighting.LaminarLightControl"
             x:DataType="vm:LaminarLightViewModel">

    <Button Command="{Binding OpenDialogCommand}"
            Classes="lighting"
            ToolTip.Tip="Laminar Light Control">
        <Grid>
            <Viewbox Width="40" Height="40" Margin="0,0,0,4">
                <Canvas Width="24" Height="24">
                    <!-- Dotted Circle -->
                    <Path Data="M12,2 A10,10 0 1,0 12,22 A10,10 0 1,0 12,2"
                          Stroke="{Binding IsLightOn, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#FFD700,#808080'}"
                          StrokeDashArray="1,1"
                          Fill="Transparent"
                          StrokeThickness="1"/>
                    
                    <!-- Lightbulb -->
                    <Path Data="M12,2 A7,7 0 0,1 19,9C19,11.38 17.81,13.47 16,14.74V17A1,1 0 0,1 15,18H9A1,1 0 0,1 8,17V14.74C6.19,13.47 5,11.38 5,9A7,7 0 0,1 12,2M9,21V20H15V21A1,1 0 0,1 14,22H10A1,1 0 0,1 9,21M12,4A5,5 0 0,0 7,9C7,11.05 8.23,12.81 10,13.58V16H14V13.58C15.77,12.81 17,11.05 17,9A5,5 0 0,0 12,4Z"
                          Fill="{Binding IsLightOn, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#FFD700,#808080'}"/>
                </Canvas>
            </Viewbox>
            <TextBlock Text="Laminar Light"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Bottom"
                     FontSize="12"/>
        </Grid>
    </Button>

    <UserControl.Styles>
        <Style Selector="Button.lighting">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
        <Style Selector="Button.lighting:pointerover">
            <Setter Property="Background" Value="#3D3D3D"/>
        </Style>
        <Style Selector="Button.lighting:pressed">
            <Setter Property="Background" Value="#1D1D1D"/>
        </Style>
    </UserControl.Styles>
</UserControl> 