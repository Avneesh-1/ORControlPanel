<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:ORControlPanelNew.Converters"
             x:Class="ORControlPanelNew.App">
	
    <Application.Styles>
        <FluentTheme/>
        <StyleInclude Source="/Styles/Styles.axaml"/>
    </Application.Styles>

    <Application.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToTextConverter x:Key="BoolToTextConverter"/>
		<converters:StringToBrushConverter x:Key="StringToBrushConverter"/>
		<converters:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
		<SolidColorBrush x:Key="OnBrush" Color="Green"/>
		<SolidColorBrush x:Key="OffBrush" Color="Red"/>
		<SolidColorBrush x:Key="OkBrush" Color="Green"/>
		<SolidColorBrush x:Key="ErrorBrush" Color="Red"/>
    </Application.Resources>
</Application>
